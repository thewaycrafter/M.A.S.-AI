# ===========================================
# M.A.S. AI - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ---------------------
# MongoDB Configuration
# ---------------------
MONGODB_URI=mongodb://localhost:27017/masai

# ---------------------
# JWT Configuration
# ---------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ---------------------
# Email Configuration (for authorization flow)
# ---------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=M.A.S. AI <noreply@masai.com>

# ---------------------
# Frontend URL
# ---------------------
FRONTEND_URL=http://localhost:3000

# ---------------------
# Razorpay (Payment Gateway - Optional)
# ---------------------
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# ---------------------
# PostgreSQL (Audit Logs - Optional)
# ---------------------
# Leave blank to skip audit log persistence
POSTGRES_HOST=
POSTGRES_PORT=5432
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=masai_audit

# ---------------------
# App Configuration
# ---------------------
NODE_ENV=development
PORT=3001
